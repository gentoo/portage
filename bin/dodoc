if [ $# -lt 1 ] ; then
	source "${PORTAGE_BIN_PATH:-/usr/lib/portage/bin}"/isolated-functions.sh
	vecho "${0##*/}: at least one argument needed" 1>&2
	exit 1 	
fi

dir="${ED}/usr/share/doc/${PF}/${_E_DOCDESTTREE_}"
if [ ! -d "${dir}" ] ; then
	install -d "${dir}"
fi

ret=0
for x in "$@" ; do
	if [ -s "${x}" ] ; then
		install -m0644 "${x}" "${dir}"
		ecompress --queue "${dir}/${x##*/}"
	elif [ ! -e "${x}" ] ; then
		echo "dodoc: ${x} does not exist" 1>&2
		((++ret))
	fi
done

exit ${ret}
