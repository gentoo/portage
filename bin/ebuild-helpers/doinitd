source "${PORTAGE_BIN_PATH}"/isolated-functions.sh || exit 1

if [[ $# -lt 1 ]] ; then
	source "${PORTAGE_BIN_PATH}"/isolated-functions.sh || exit 1
	__helpers_die "${0##*/}: at least one argument needed"
	exit 1
fi

if ! ___eapi_doinitd_respects_exeopts; then
	export EXEOPTIONS=-m0755
	export DIROPTIONS=""
fi

_E_EXEDESTTREE_='/etc/init.d/' exec doexe "$@"
