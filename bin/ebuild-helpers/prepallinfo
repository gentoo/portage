source "${PORTAGE_BIN_PATH:-/usr/lib/portage/bin}"/isolated-functions.sh

if ! ___eapi_has_prefix_variables; then
	ED=${D}
fi

[[ -d ${ED}usr/share/info ]] || exit 0

exec prepinfo
